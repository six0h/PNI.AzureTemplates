{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Environment": {
      "type": "string",
      "metadata": {
        "description": "Environment that our VNet belongs to"
      }
    },
    "Customer": {
      "type": "string",
      "metadata": {
        "description": "The customer this VNet belongs to"
      }
    },
    "CustomerId": {
      "type": "string",
      "metadata": {
        "description": "The customer ID this VNet belongs to"
      }
    },
    "AzureLocation": {
      "type": "string",
      "metadata": {
        "description": "Which Datacenter this VNet resides in"
      }
    },
    "Country": {
      "type": "string",
      "metadata": {
        "description": "The Country we're working in"
      }
    },
    "GatewayZone": {
      "type": "int",
      "metadata": {
        "description": "The Quartet for the Gateway Subnet in the VNet"
      },
      "default": 254
    },
    "Subnets": {
      "type": "array",
      "metadata": {
        "description": "The subnets to create in your VNet"
      }
    },
    "PNIGlobalGatewayName": {
      "type": "string",
      "default": "[concat(parameters('Environment'), 'sysgws01')]",
      "metadata": {
        "description": "The Name of the VNet Gateway in the PNIGlobal Resource Group"
      }
    },
    "SharedKey": {
      "type": "string",
      "metadata": {
        "description": "The shared key to use to peer this vnet to pniglobal"
      }
    },
    "VNetPrefix": {
      "type": "string",
      "metadata": {
        "description": "This is the CIDR Block that our VNet will fit within"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "[variables('ApiVersion')]",
      "location": "[resourceGroup().location]",
      "name": "[variables('ResourceGroupName')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('VNetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "GatewaySubnet",
            "properties": {
              "addressPrefix": "[variables('GatewaySubnetPrefix')]"
            }
          }
        ]
      },
      "type": "Microsoft.Network/virtualNetworks"
    },
    {
      "apiVersion": "[variables('ApiVersion')]",
      "location": "[resourceGroup().location]",
      "name": "[variables('PublicIPName')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      },
      "type": "Microsoft.Network/publicIPAddresses"
    },
    {
      "apiVersion": "[variables('ApiVersion')]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', variables('PublicIPName'))]",
        "[concat('Microsoft.Network/virtualNetworks/', variables('ResourceGroupName'))]"
      ],
      "location": "[resourceGroup().location]",
      "name": "[variables('GatewayName')]",
      "properties": {
        "ipConfigurations": [
          {
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('GatewaySubnet')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIPName'))]"
              }
            },
            "name": "[variables('GatewayIPConfigName')]"
          }
        ]
      },
      "type": "Microsoft.Network/virtualNetworkGateways"
    },
    {
      "apiVersion": "[variables('apiVersion')]",
      "type": "Microsoft.Network/connections",
      "name": "[concat(variables('GatewayName'),parameters('PNIGlobalGatewayName'))]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworkGateways/', variables('GatewayName'))]",
        "[concat('Microsoft.Network/virtualNetworkGateways/', parameters('PNIGlobalGatewayName'))]"
      ],
      "properties": {
        "virtualNetworkGateway1": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways',variables('GatewayName'))]"
        },
        "virtualNetworkGateway2": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways',parameters('PNIGlobalGatewayName'))]"
        },
        "connectionType": "Vnet2Vnet",
        "routingWeight": 3,
        "sharedKey": "[parameters('SharedKey')]"
      }
    },
    {
      "apiVersion": "[variables('apiVersion')]",
      "type": "Microsoft.Network/connections",
      "name": "[concat(parameters('PNIGlobalGatewayName'),variables('GatewayName'))]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworkGateways/', variables('GatewayName'))]",
        "[concat('Microsoft.Network/virtualNetworkGateways/', parameters('PNIGlobalGatewayName'))]"
      ],
      "properties": {
        "virtualNetworkGateway2": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways',variables('GatewayName'))]"
        },
        "virtualNetworkGateway1": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways',parameters('PNIGlobalGatewayName'))]"
        },
        "connectionType": "Vnet2Vnet",
        "routingWeight": 3,
        "sharedKey": "[parameters('SharedKey')]"
      }
    }
  ],
  "variables": {
    "ApiVersion": "2015-06-15",
    "ResourceGroupName": "[concat(parameters('Environment'), parameters('Customer'), parameters('Country'))]",
    "VNetName": "[variables('ResourceGroupName')]",
    "VNetId": "[resourceId('Microsoft.Network/virtualNetworks',variables('VNetName'))]",
    "PublicIPName": "[concat(variables('ResourceGroupName'), 'gwsip01')]",
    "GatewayIPConfigName": "[concat(variables('ResourceGroupName'), 'gwsipcfg01')]",
    "GatewaySubnet": "[concat(variables('VNetId'),'/subnets/GatewaySubnet')]",
    "GatewaySubnetPrefix": "[concat('10.1.', parameters('GatewayZone'), '0/24')]",
    "GatewayName": "[concat(parameters('Environment'), 'sysgws01')]"
  }
}